{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "jsx": "preserve",
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "server.ts",
    "src/lib/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
